<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/top_list_item_layout"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/item_num"
                android:layout_alignParentTop="true"
                android:textSize="20sp"/>
        <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:orientation="vertical"
                                                      android:layout_toEndOf="@id/item_num"
        android:gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_title"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/item_num"
                    android:gravity="center"
                    android:textSize="20sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_descr"
                    android:layout="@+id/person_photo"
                    android:layout_toRightOf="@id/item_num"
                    android:maxLength="100"
                    android:layout_below="@id/item_title"/>
        </android.support.v7.widget.LinearLayoutCompat>


    </RelativeLayout>

</android.support.v7.widget.CardView>
